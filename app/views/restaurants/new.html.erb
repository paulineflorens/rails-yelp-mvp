

<div class="container justify-content-center">
  <h1>CREER UN NOUVEAU RESTAURANT</h1>
  <div class="col-12 col-lg-6 mt-5">
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name, placeholder: :name %>
      <%= f.input :address, placeholder: :address %>
      <%= f.input :phone_number, placeholder: :phone_number %>
      <%= f.input :category, :collection => %w[chinese italian japanese french belgian] %>
      <%= f.button :submit, class: 'btn-primary btn-block' %>
    <% end %>
    <%= link_to "Go back", restaurants_path %>

  </div>
</div>
